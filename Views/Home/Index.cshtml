@{
    ViewBag.Title = "Home Page";
}

@model  List <WolfmaresBlog.Models.Post>

<section class="row">
    @foreach(var post in Model)
    {
            <article class="col-md-6">
                <h2 class="title">@post.Title</h2>
                <div class="about">
                     published 
                    @if(@post.Author!=null)
                    {
                       @:by  
                        <i>@post.Author.FullName</i>
                    }
                     on <i>@post.Date</i>
                </div>
                <div class="body">@Html.Raw(@post.Body)</div>
            </article>
    }
    </section>

